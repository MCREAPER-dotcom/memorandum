<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="Memorandum.Desktop.Controls.ImageAttachmentView"
             Width="140"
             Height="105"
             MinWidth="100"
             MinHeight="80">
  <Border BorderBrush="{StaticResource GraphBorderBrush}" BorderThickness="1" CornerRadius="6" ClipToBounds="True" Background="{StaticResource GraphPanelBackground}">
    <Grid>
      <Image x:Name="PreviewImage" Stretch="Uniform" StretchDirection="DownOnly"
             HorizontalAlignment="Center" VerticalAlignment="Center"
             MaxWidth="140" MaxHeight="105" />
      <Grid HorizontalAlignment="Right" VerticalAlignment="Top" Margin="4" ColumnDefinitions="Auto,Auto">
        <Button x:Name="DeleteButton" Grid.Column="0" Margin="0,0,2,0"
                Padding="6" MinWidth="28" MinHeight="28" Background="#CC000000" BorderThickness="0" Opacity="0.9"
                Cursor="Hand" Click="OnDeleteClick" ToolTip.Tip="Удалить из заметки" IsVisible="False">
          <Image Source="{StaticResource CrossSmallIcon}" Width="14" Height="14" />
        </Button>
        <Button Grid.Column="1" Padding="6" MinWidth="32" MinHeight="32" Background="#CC000000" BorderThickness="0" Opacity="0.9"
                Cursor="Hand" Click="OnOpenImageClick" ToolTip.Tip="Открыть изображение">
          <Image Source="{StaticResource SearchIcon}" Width="20" Height="20" />
        </Button>
      </Grid>
    </Grid>
  </Border>
</UserControl>
