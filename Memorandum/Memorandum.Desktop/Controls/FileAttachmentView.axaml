<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="Memorandum.Desktop.Controls.FileAttachmentView"
             MinWidth="150"
             MinHeight="140">
  <Border BorderBrush="{StaticResource GraphBorderBrush}" BorderThickness="1" CornerRadius="6" Padding="8" Background="{StaticResource GraphPanelBackground}">
    <Grid RowDefinitions="Auto,*,Auto">
      <Grid Grid.Row="0" ColumnDefinitions="*,Auto,Auto">
        <Panel Grid.Column="0" />
        <Button x:Name="DeleteButton" Grid.Column="1" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,0,2,4" 
                Padding="4" MinWidth="24" MinHeight="24" Background="Transparent" BorderThickness="0" 
                Cursor="Hand" Click="OnDeleteClick" ToolTip.Tip="Удалить из заметки" IsVisible="False">
          <Image x:Name="DeleteIconImage" Source="{StaticResource CrossSmallIcon}" Width="14" Height="14" />
        </Button>
        <Button Grid.Column="2" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,0,0,4" 
                Padding="4" MinWidth="24" MinHeight="24" Background="Transparent" BorderThickness="0" 
                Cursor="Hand" Click="OnOpenFileClick" ToolTip.Tip="Открыть файл">
          <Image Source="{StaticResource SearchIcon}" Width="16" Height="16" />
        </Button>
      </Grid>
      <StackPanel Grid.Row="1" Spacing="8" VerticalAlignment="Center" HorizontalAlignment="Center">
        <Image x:Name="DocumentImage" Source="{StaticResource DocumentIcon}" Width="48" Height="48" />
      </StackPanel>
      <StackPanel Grid.Row="2" Spacing="2" VerticalAlignment="Bottom" HorizontalAlignment="Stretch">
        <TextBlock x:Name="FileNameText" FontSize="11" Foreground="{StaticResource PrimaryForeground}" 
                   TextAlignment="Left" TextWrapping="Wrap" MaxWidth="150" />
        <TextBlock x:Name="FileExtensionText" IsVisible="False" />
      </StackPanel>
    </Grid>
  </Border>
</UserControl>
