<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <!-- Переопределение ресурсов Fluent для скроллбара: прозрачный трек, наши цвета ползунка -->
  <SolidColorBrush x:Key="ScrollBarBackground" Color="#00000000" />
  <SolidColorBrush x:Key="ScrollBarTrackFill" Color="#00000000" />
  <SolidColorBrush x:Key="ScrollBarTrackStroke" Color="#00000000" />
  <SolidColorBrush x:Key="ScrollBarTrackFillPointerOver" Color="#00000000" />
  <SolidColorBrush x:Key="ScrollBarTrackStrokePointerOver" Color="#00000000" />
  <SolidColorBrush x:Key="ScrollBarBackgroundPointerOver" Color="#00000000" />
  <SolidColorBrush x:Key="ScrollBarPanningThumbBackground" Color="#2d1b4e" />
  <SolidColorBrush x:Key="ScrollBarThumbBackgroundColor" Color="#2d1b4e" />
  <SolidColorBrush x:Key="ScrollBarThumbFillPointerOver" Color="#7c3aed" />
  <SolidColorBrush x:Key="ScrollBarThumbFillPressed" Color="#a78bfa" />
  <SolidColorBrush x:Key="ScrollBarThumbFillDisabled" Color="#2d1b4e" />
  <!-- Выбранный пункт ListBoxItem — ярко-фиолетовый (Fluent использует эти ключи в шаблоне) -->
  <SolidColorBrush x:Key="SystemControlHighlightListAccentLowBrush" Color="#a78bfa" />
  <SolidColorBrush x:Key="SystemControlHighlightListAccentMediumBrush" Color="#a78bfa" />
  <SolidColorBrush x:Key="SystemControlHighlightListAccentHighBrush" Color="#a78bfa" />
  <SolidColorBrush x:Key="SystemControlHighlightListLowBrush" Color="#5b21b6" />
  <SolidColorBrush x:Key="SystemControlHighlightListMediumBrush" Color="#7c3aed" />
  <!-- Календарь: дни не из текущего месяца (CalendarDayButton:inactive) -->
  <SolidColorBrush x:Key="CalendarViewOutOfScopeBackground" Color="#2d1b4e" />
  <SolidColorBrush x:Key="CalendarViewOutOfScopeForeground" Color="#d1d5db" />
  <!-- Календарь: плитки дней текущего месяца — видимый фон и обводка для читаемости -->
  <SolidColorBrush x:Key="CalendarViewCalendarItemRevealBackground" Color="#252538" />
  <SolidColorBrush x:Key="CalendarViewCalendarItemRevealBorderBrush" Color="#4a4a6a" />
  <SolidColorBrush x:Key="CalendarViewCalendarItemForeground" Color="#f3f4f6" />
  <!-- Hover и нажатие -->
  <SolidColorBrush x:Key="CalendarViewHoverBorderBrush" Color="#a78bfa" />
  <SolidColorBrush x:Key="CalendarViewPressedBorderBrush" Color="#5b21b6" />
  <!-- Выбранный день -->
  <SolidColorBrush x:Key="CalendarViewSelectedBorderBrush" Color="#a78bfa" />
  <SolidColorBrush x:Key="CalendarViewSelectedHoverBorderBrush" Color="#c4b5fd" />
  <SolidColorBrush x:Key="CalendarViewSelectedPressedBorderBrush" Color="#5b21b6" />
  <!-- Сегодня -->
  <SolidColorBrush x:Key="CalendarViewTodayForeground" Color="#ffffff" />
</ResourceDictionary>
