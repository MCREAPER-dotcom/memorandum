<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <!-- Стиль рамки и заголовка основного окна и диалогов (кастомный chrome). -->
  <Style Selector="Border.AppHeader">
    <Setter Property="Background" Value="{StaticResource SurfaceBackground}" />
    <Setter Property="BorderBrush" Value="{StaticResource GraphBorderBrush}" />
    <Setter Property="BorderThickness" Value="0,0,0,1" />
    <Setter Property="Padding" Value="16,12" />
  </Style>
</Styles>
