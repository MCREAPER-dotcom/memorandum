<local:MemorandumDialogWindow xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="using:Memorandum.Desktop"
        xmlns:controls="using:Memorandum.Desktop.Controls"
        x:Class="Memorandum.Desktop.Views.TagNameDialog"
        Title="Новый тег"
        Width="540"
        Height="380"
        MinWidth="480"
        MinHeight="320"
        WindowStartupLocation="CenterOwner">
  <controls:DialogChrome x:Name="Chrome" Title="{Binding Title, RelativeSource={RelativeSource AncestorType=Window}}">
    <StackPanel Margin="24" Spacing="16">
      <TextBlock Text="Введите название тега:" Classes="StaticLabel" />
      <TextBox x:Name="TagNameBox" Watermark="название тега" Classes="DarkInput" />
      <TextBlock Text="Цвет тега:" Classes="StaticLabel" />
      <WrapPanel x:Name="ColorPanel" Orientation="Horizontal" />
      <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Spacing="12">
        <Button Content="Отмена" Classes="SecondaryButton" Click="OnCancelClick" />
        <Button Content="Создать" Classes="PrimaryButton" Click="OnOkClick" />
      </StackPanel>
    </StackPanel>
  </controls:DialogChrome>
</local:MemorandumDialogWindow>
