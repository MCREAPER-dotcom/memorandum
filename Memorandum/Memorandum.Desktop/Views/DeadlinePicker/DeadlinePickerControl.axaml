<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="Memorandum.Desktop.Views.DeadlinePickerControl"
             HorizontalAlignment="Stretch"
             ClipToBounds="False">
  <Grid RowDefinitions="Auto,Auto,Auto" Margin="0,4">
    <Calendar x:Name="PartCalendar" Grid.Row="0" Classes="DeadlineCalendar" SelectionMode="SingleDate" DisplayMode="Month" VerticalAlignment="Top" HorizontalAlignment="Left" />
    <Grid Grid.Row="1" ColumnDefinitions="Auto,Auto" Margin="0,12,0,0">
      <TextBlock Grid.Column="0" Text="Время:" Classes="StaticLabel" VerticalAlignment="Center" Margin="0,0,10,0" />
      <TimePicker Grid.Column="1" x:Name="PartTimePicker" Classes="DeadlinePicker" ClockIdentifier="24HourClock" MinWidth="120" VerticalAlignment="Center" />
    </Grid>
    <Button Grid.Row="2" x:Name="ClearButton" Content="Без дедлайна" Classes="SecondaryButton" Click="OnClearClick" MinHeight="40" Padding="16,10" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="0,10,0,0" />
  </Grid>
</UserControl>
