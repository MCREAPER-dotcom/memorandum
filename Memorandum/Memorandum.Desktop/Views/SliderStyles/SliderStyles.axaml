<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <!-- Слайдер в стиле тёмной темы: акцентный цвет заполнения, ползунок -->
  <Style Selector="Slider.DarkSlider">
    <Setter Property="Foreground" Value="{StaticResource AccentBrush}" />
    <Setter Property="MinHeight" Value="28" />
    <Setter Property="VerticalAlignment" Value="Center" />
  </Style>
  <!-- Ползунок -->
  <Style Selector="Slider.DarkSlider /template/ Thumb">
    <Setter Property="Width" Value="20" />
    <Setter Property="Height" Value="20" />
    <Setter Property="Background" Value="{StaticResource AccentBrush}" />
    <Setter Property="BorderThickness" Value="0" />
  </Style>
  <Style Selector="Slider.DarkSlider /template/ Thumb Border">
    <Setter Property="Background" Value="{StaticResource AccentBrush}" />
    <Setter Property="BorderThickness" Value="0" />
    <Setter Property="CornerRadius" Value="10" />
  </Style>
  <Style Selector="Slider.DarkSlider /template/ Thumb:pointerover Border">
    <Setter Property="Background" Value="{StaticResource AccentHoverBrush}" />
  </Style>
  <Style Selector="Slider.DarkSlider /template/ Thumb:pressed Border">
    <Setter Property="Background" Value="{StaticResource AccentPressedBrush}" />
  </Style>
</Styles>
