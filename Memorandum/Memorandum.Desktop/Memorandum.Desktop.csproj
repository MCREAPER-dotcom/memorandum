<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net8.0</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <RootNamespace>Memorandum.Desktop</RootNamespace>
    <AssemblyName>Memorandum.Desktop</AssemblyName>
    <AssemblyTitle>Memorandum</AssemblyTitle>
    <Product>Memorandum</Product>
    <Company>MCREAPER</Company>
    <Copyright>Copyright Â© MCREAPER</Copyright>
  </PropertyGroup>
  <ItemGroup>
    <PackageReference Include="Avalonia" Version="11.2.0" />
