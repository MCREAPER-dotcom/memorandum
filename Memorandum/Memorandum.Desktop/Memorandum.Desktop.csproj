    <PackageReference Include="Avalonia.Themes.Fluent" Version="11.2.0" />
    <PackageReference Include="Quick.AvaloniaFonts.Roboto" Version="1.0.0" />
    <PackageReference Include="Avalonia.Svg.Skia" Version="11.2.0.2" />
    <PackageReference Include="NAudio" Version="2.2.1" />
    <PackageReference Include="CommunityToolkit.Mvvm" Version="8.2.2" />
    <PackageReference Include="System.Drawing.Common" Version="8.0.10" />
  </ItemGroup>
  <ItemGroup>
    <ProjectReference Include="..\Memorandum.Core\Memorandum.Core.csproj" />
  </ItemGroup>
  <ItemGroup>
    <AvaloniaResource Include="Themes\AppResources.axaml" />
    <AvaloniaResource Include="Themes\PaletteApp.axaml" />
    <AvaloniaResource Include="Themes\PaletteTags.axaml" />
    <AvaloniaResource Include="Themes\PaletteGraph.axaml" />
    <AvaloniaResource Include="Themes\ScrollBarFluentOverrides.axaml" />
